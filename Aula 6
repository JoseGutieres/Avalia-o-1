java  
    public class VerificacaoCompra {

    public static void main(String[] args) {

        double precoProduto, valorDisponivel, precoFinal;

        final double TAXA_DESCONTO = 0.10;

    }

}
java
        precoFinal = precoProduto * (1 - TAXA_DESCONTO);
javap
    public class DoacaoSangue {

    public static void main(String[] args) {

        int idade;

        double peso;

        final double PESO_MINIMO = 50.0;

    }

}
java
        Scanner scanner = new Scanner(System.in);

        System.out.print("Digite a idade: ");

        idade = scanner.nextInt();

        System.out.print("Digite o peso: ");

        peso = scanner.nextDouble();
java
        boolean apto = (idade >= 18 && peso >= PESO_MINIMO);

        System.out.println("Apto para doar: " + apto);

        scanner.close();

    }

}
